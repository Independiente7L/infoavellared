# Cache control for Netlify - Configuración anti-caché agresiva
/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  X-Cache-Control: no-cache

# Specific cache control for JS files
*.js
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  X-Cache-Control: no-cache

# Specific cache control for CSS files  
*.css
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  X-Cache-Control: no-cache

# Specific cache control for HTML files
*.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  X-Cache-Control: no-cache

# Specific for auto-update.js to prevent caching issues
/auto-update.js
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
